    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Debug",
            "url": "http://localhost:8080/index.html",
            "preLaunchTask": "start",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
            "trace": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
            ],
            "console": "internalConsole",
            "env": {
                "NODE_ENV": "test"
            }
        }
    ]
}